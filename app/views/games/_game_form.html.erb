<%= form_for(@game) do |f| %>
<%= render 'game_error' %>
<div class = "input_field">
				<%= f.label :gamename %>
				</br>
				<%= f.text_field :gamename %>
			</div>
			<div class = "input_field">
				<%= f.label :genre%>
				</br>
				<%= f.text_field :genre %>
			</div>
			<div class = "input_field">
				<%= f.label :rating%>
				</br>
				<%= f.text_field :rating %>
			</div>
			<div class = "input_field">
				<%= f.label :game_desc %>
				</br>
				<%= f.text_area :game_desc %>
			</div>
			<div class = "input_field">
				<%= f.label :review %>
				</br>
				<%= f.text_area :review %>
			</div>
			<div class = "actions">
				<%= f.submit "Submit Sign Up!" %>
			</div>
<% end %>